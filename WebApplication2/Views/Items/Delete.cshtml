@model WebApplication2.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameInArabic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameInArabic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameInEnglish)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameInEnglish)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>
        <dd width="30%">
            @if (!string.IsNullOrEmpty(Model.ItemImageFileName))
            {
                <img src="~/images/@Model.ItemImageFileName" style="width:110px" alt="Item Image " />
            }
            else
            {
                <p>No image</p>
            }
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Warehouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Warehouse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Code" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        &nbsp;
        <a asp-action="Index" class="btn btn-warning">Back to List</a>
    </form>
</div>
